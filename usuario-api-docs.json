  "components": {
    "schemas": {
      "UsuarioRequest": {
        "required": [
          "email",
          "firstName",
          "isActive",
          "password",
          "role"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "firstName": {
            "maxLength": 60,
            "minLength": 0,
            "type": "string"
          },
          "lastName": {
            "maxLength": 60,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "maxLength": 60,
            "minLength": 0,
            "type": "string"
          },
          "password": {
            "maxLength": 60,
            "minLength": 0,
            "type": "string"
          },
          "socialNetwork": {
            "maxLength": 60,
            "minLength": 0,
            "type": "string"
          },
          "role": {
            "type": "string",
            "format": "uuid"
          },
          "isActive": {
            "type": "boolean"
          }
        }
      },
      "GeneralResponseUsuarioDTO": {
        "type": "object",
        "properties": {
          "error": {
            "type": "boolean"
          },
          "descripcionRespuesta": {
            "type": "string"
          },
          "resultado": {
            "$ref": "#/components/schemas/UsuarioDTO"
          }
        }
      },
      "PermisoDTO": {
        "required": [
          "description",
          "name",
          "permissionId",
          "status"
        ],
        "type": "object",
        "properties": {
          "permissionId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "maxLength": 60,
            "minLength": 0,
            "type": "string"
          },
          "description": {
            "maxLength": 250,
            "minLength": 0,
            "type": "string"
          },
          "status": {
            "type": "boolean"
          }
        }
      },
      "RolDTO": {
        "required": [
          "description",
          "name",
          "roleId",
          "status"
        ],
        "type": "object",
        "properties": {
          "roleId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "maxLength": 60,
            "minLength": 0,

          },
          "description": {
            "maxLength": 250,
            "minLength": 0,
            "type": "string"
          },
          "status": {
            "type": "boolean"
          },
          "permissions": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PermisoDTO"
            }
          }
        }
      },
